pipeline {
    agent any
    
    environment {
        NODE_VERSION = '18'
        APP_NAME = 'express-app'
        DOCKER_IMAGE = "${APP_NAME}:${BUILD_NUMBER}"
    }

    stages {
        stage('ğŸ” Checkout') {
            steps {
                echo "=== CHECKING OUT SOURCE CODE ==="
                git url: 'https://github.com/MuddyThunder1040/appserver.git', branch: 'main'
                echo "âœ… Source code checked out successfully"
            }
        }
        
        stage('ğŸ”§ Setup Node.js') {
            steps {
                echo "=== SETTING UP NODE.JS ENVIRONMENT ==="
                sh '''
                    echo "ğŸ“‹ Node.js version check:"
                    node --version
                    echo "ğŸ“¦ NPM version check:"
                    npm --version
                '''
            }
        }
        
        stage('ğŸ“¦ Install Dependencies') {
            steps {
                echo "=== INSTALLING DEPENDENCIES ==="
                sh '''
                    echo "ğŸ” Checking package.json..."
                    if [ -f package.json ]; then
                        echo "ğŸ“¥ Installing all dependencies (including dev dependencies for testing)..."
                        npm ci
                        echo "âœ… Dependencies installed successfully"
                        
                        echo "ğŸ“‹ Installed packages summary:"
                        npm list --depth=0 || true
                    else
                        echo "âŒ No package.json found"
                        exit 1
                    fi
                '''
            }
        }
        
        stage('ğŸ§ª Run Tests') {
            steps {
                echo "=== RUNNING COMPREHENSIVE TEST SUITE ==="
                script {
                    try {
                        sh '''
                            echo "ğŸ§ª Running Jest test suite..."
                            npm test
                            
                            echo "ğŸ“Š Generating test coverage report..."
                            npm run test:coverage
                            
                            echo "âœ… All tests passed successfully"
                        '''
                    } catch (Exception e) {
                        echo "âŒ Tests failed: ${e.getMessage()}"
                        sh '''
                            echo "ğŸ“„ Test failure details:"
                            npm test -- --verbose || true
                        '''
                        error "Test stage failed"
                    }
                }
            }
            post {
                always {
                    script {
                        // Archive test results and coverage if available
                        if (fileExists('coverage/')) {
                            echo "ğŸ“ˆ Archiving test coverage reports..."
                            archiveArtifacts artifacts: 'coverage/**/*', allowEmptyArchive: true
                        }
                    }
                }
            }
        }
        
        stage('ğŸ” Code Quality Check') {
            steps {
                echo "=== CODE QUALITY ANALYSIS ==="
                sh '''
                    echo "ğŸ“Š Checking file structure..."
                    ls -la
                    
                    echo "ğŸ” Checking server.js syntax..."
                    node -c server.js
                    
                    echo "ğŸ” Checking database.js syntax..."
                    if [ -f database.js ]; then
                        node -c database.js
                        echo "âœ… Database module syntax check passed"
                    fi
                    
                    echo "ğŸ“‹ Verifying SQLite database setup..."
                    if [ -f database.js ]; then
                        echo "âœ… Database module found"
                    else
                        echo "âš ï¸ No database module found"
                    fi
                    
                    echo "ğŸ” Checking Docker configuration..."
                    if [ -f Dockerfile ]; then
                        echo "âœ… Dockerfile found"
                    fi
                    if [ -f docker-compose.yml ]; then
                        echo "âœ… Docker Compose configuration found"
                    fi
                    
                    echo "âœ… Code quality check passed"
                '''
            }
        }
        
        stage('ğŸ³ Build Docker Image') {
            steps {
                echo "=== BUILDING DOCKER IMAGE ==="
                script {
                    try {
                        sh """
                            echo "ğŸ” Checking Docker availability..."
                            docker --version
                            docker info
                            
                            echo "ğŸ—ï¸ Building Docker image: ${DOCKER_IMAGE}"
                            docker build -t ${DOCKER_IMAGE} .
                            echo "âœ… Docker image built successfully"
                            
                            echo "ğŸ“‹ Docker images:"
                            docker images | grep ${APP_NAME} || echo "No previous images found"
                            
                            echo "ğŸ·ï¸ Tagging image as latest:"
                            docker tag ${DOCKER_IMAGE} ${APP_NAME}:latest
                        """
                    } catch (Exception e) {
                        echo "âš ï¸ Docker build failed: ${e.getMessage()}"
                        echo "ğŸ”„ Continuing pipeline without Docker image..."
                        currentBuild.result = 'UNSTABLE'
                    }
                }
            }
        }
        
        stage('ğŸš€ Deploy Application') {
            steps {
                echo "=== DEPLOYING APPLICATION ==="
                script {
                    sh '''
                        echo "ğŸ¯ Starting deployment process..."
                        
                        # Stop any existing process on port 3000
                        echo "ğŸ›‘ Stopping existing services..."
                        pkill -f "node server.js" || true
                        
                        # Stop any existing Docker containers on port 3000 (if Docker is accessible)
                        if docker info > /dev/null 2>&1; then
                            echo "ğŸ³ Stopping Docker containers on port 3000..."
                            docker stop $(docker ps -q --filter "publish=3000") 2>/dev/null || true
                        else
                            echo "âš ï¸ Docker not accessible, skipping Docker container cleanup"
                        fi
                        
                        # Wait a moment for cleanup
                        sleep 2
                        
                        echo "ï¿½ Initializing database..."
                        # Pre-initialize database to ensure it's ready
                        timeout 10s node -e "
                            const Database = require('./database');
                            const db = new Database();
                            db.initialize().then(() => {
                                console.log('âœ… Database initialized successfully');
                                process.exit(0);
                            }).catch(err => {
                                console.error('âŒ Database initialization failed:', err);
                                process.exit(1);
                            });
                        " || echo "âš ï¸ Database initialization timeout (may already be running)"
                        
                        echo "ï¿½ğŸš€ Starting Express application with database..."
                        nohup node server.js > app.log 2>&1 &
                        
                        # Give the app more time to start (database initialization)
                        sleep 5
                        
                        echo "ğŸ” Checking if application is running..."
                        if curl -f http://localhost:3000/health > /dev/null 2>&1; then
                            echo "âœ… Application deployed successfully!"
                            echo "ğŸŒ Application is running at: http://localhost:3000"
                            echo "ğŸ“Š Database endpoints available at:"
                            echo "   - GET /users (View all users)"
                            echo "   - POST /users (Create user)"
                            echo "   - GET /admin/logs (View activity logs)"
                            echo "   - GET /admin/stats (Database statistics)"
                        else
                            echo "âŒ Application failed to start"
                            echo "ğŸ“„ Application logs:"
                            cat app.log || echo "No logs available"
                            exit 1
                        fi
                    '''
                }
            }
        }
        
        stage('ğŸ³ Docker Deploy (Optional)') {
            when {
                expression { return currentBuild.result != 'UNSTABLE' }
            }
            steps {
                echo "=== DEPLOYING WITH DOCKER ==="
                script {
                    try {
                        sh """
                            echo "ğŸ³ Testing Docker deployment on port 3001..."
                            
                            # Stop any existing Docker containers for this app
                            docker stop ${APP_NAME}-container 2>/dev/null || true
                            docker rm ${APP_NAME}-container 2>/dev/null || true
                            
                            # Run the Docker container on port 3001 (to avoid conflict with port 3000)
                            docker run -d --name ${APP_NAME}-container -p 3001:3000 ${DOCKER_IMAGE}
                            
                            # Wait for container to start
                            sleep 5
                            
                            # Test Docker deployment
                            if curl -f http://localhost:3001 > /dev/null 2>&1; then
                                echo "âœ… Docker deployment successful!"
                                echo "ğŸ³ Docker container running at: http://localhost:3001"
                            else
                                echo "âš ï¸ Docker deployment test failed"
                                docker logs ${APP_NAME}-container
                            fi
                        """
                    } catch (Exception e) {
                        echo "âš ï¸ Docker deployment failed: ${e.getMessage()}"
                    }
                }
            }
        }
        
        stage('âœ… Health Check') {
            steps {
                echo "=== PERFORMING COMPREHENSIVE HEALTH CHECK ==="
                sh '''
                    echo "ğŸ¥ Running health checks..."
                    
                    echo "ğŸ” Testing application health endpoint..."
                    health_response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:3000/health)
                    
                    if [ "$health_response" = "200" ]; then
                        echo "âœ… Health check passed - Application is healthy (HTTP: $health_response)"
                    else
                        echo "âŒ Health check failed - HTTP status: $health_response"
                        exit 1
                    fi
                    
                    echo "ğŸ” Testing main application endpoint..."
                    main_response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:3000)
                    
                    if [ "$main_response" = "200" ] || [ "$main_response" = "302" ]; then
                        echo "âœ… Main endpoint responding (HTTP: $main_response)"
                    else
                        echo "âš ï¸ Main endpoint unusual response: $main_response"
                    fi
                    
                    echo "ğŸ“Š Testing database endpoints..."
                    users_response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:3000/users)
                    
                    if [ "$users_response" = "200" ]; then
                        echo "âœ… Database endpoints responding (HTTP: $users_response)"
                        
                        echo "ï¿½ Testing API functionality..."
                        api_response=$(curl -s http://localhost:3000/api)
                        echo "ğŸ“‹ API Response: $api_response"
                        
                        echo "ğŸ“Š Testing admin endpoints..."
                        admin_logs_response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:3000/admin/logs)
                        admin_stats_response=$(curl -s -o /dev/null -w "%{http_code}" http://localhost:3000/admin/stats)
                        
                        if [ "$admin_logs_response" = "200" ] && [ "$admin_stats_response" = "200" ]; then
                            echo "âœ… Admin dashboard endpoints responding"
                        else
                            echo "âš ï¸ Admin endpoints: logs=$admin_logs_response, stats=$admin_stats_response"
                        fi
                    else
                        echo "âš ï¸ Database endpoints response: $users_response"
                    fi
                    
                    echo "ğŸ“ˆ Performance check..."
                    time curl -s http://localhost:3000/health > /dev/null
                    
                    echo "ğŸ“Š Application status: HEALTHY âœ…"
                '''
            }
        }
        
        stage('ğŸ—„ï¸ Database Validation') {
            steps {
                echo "=== VALIDATING DATABASE FUNCTIONALITY ==="
                sh '''
                    echo "ğŸ” Testing database operations..."
                    
                    # Test user creation
                    echo "ğŸ‘¤ Testing user creation..."
                    create_response=$(curl -s -X POST http://localhost:3000/users \
                        -H "Content-Type: application/json" \
                        -d "{\"name\":\"Jenkins Test User\",\"email\":\"jenkins.test@example.com\"}" \
                        -w "%{http_code}")
                    
                    if [[ "$create_response" == *"201"* ]] || [[ "$create_response" == *"200"* ]]; then
                        echo "âœ… User creation test passed"
                    else
                        echo "âš ï¸ User creation response: $create_response"
                    fi
                    
                    # Test user retrieval
                    echo "ğŸ“‹ Testing user retrieval..."
                    users_data=$(curl -s http://localhost:3000/users)
                    if [[ "$users_data" == *"Jenkins Test User"* ]] || [[ "$users_data" == *"users"* ]]; then
                        echo "âœ… User retrieval test passed"
                    else
                        echo "ğŸ“„ Users data preview: ${users_data:0:100}..."
                    fi
                    
                    # Test admin endpoints
                    echo "ğŸ‘¨â€ğŸ’¼ Testing admin functionality..."
                    logs_data=$(curl -s http://localhost:3000/admin/stats)
                    if [[ "$logs_data" == *"users"* ]] || [[ "$logs_data" == *"logs"* ]]; then
                        echo "âœ… Admin endpoints responding with data"
                    else
                        echo "ğŸ“Š Admin stats preview: ${logs_data:0:100}..."
                    fi
                    
                    echo "âœ… Database validation completed"
                '''
            }
        }
    }
    
    post {
        always {
            echo "ğŸ === PIPELINE EXECUTION COMPLETED ==="
            echo "ğŸ“Š Build Number: ${BUILD_NUMBER}"
            echo "ğŸ• Build Duration: ${currentBuild.durationString}"
        }
        
        success {
            echo "ğŸ‰ === PIPELINE SUCCEEDED ==="
            echo "âœ… Express application with SQLite database deployed successfully!"
            echo "ğŸŒ Application URL: http://localhost:3000"
            echo "ğŸ“Š Available endpoints:"
            echo "   - GET /health (Health check)"
            echo "   - GET /users (View all users)"
            echo "   - POST /users (Create new user)"
            echo "   - GET /admin/logs (Activity logs)"
            echo "   - GET /admin/stats (Database statistics)"
            echo "   - GET /api (API information)"
            echo "ğŸ—„ï¸ Database: SQLite with full CRUD operations"
            echo "ğŸ§ª Tests: Jest test suite with coverage reports"
            echo "ğŸ³ Docker: Container ready for deployment"
        }
        
        failure {
            echo "ğŸ’¥ === PIPELINE FAILED ==="
            echo "âŒ Deployment failed. Check the logs above for details."
            script {
                try {
                    sh '''
                        echo "ğŸ“„ Application logs (last 20 lines):"
                        tail -20 app.log || echo "No application logs available"
                    '''
                } catch (Exception e) {
                    echo "Could not retrieve application logs"
                }
            }
        }
        
        cleanup {
            echo "ğŸ§¹ === CLEANING UP ==="
            sh '''
                echo "ğŸ—‘ï¸ Cleaning up temporary files..."
                # Add any cleanup commands here if needed
            '''
        }
    }
}
